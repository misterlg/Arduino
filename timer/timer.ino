uint32_t time_ms = 0;
uint32_t time_us = 0;

/*
*********************************************************************************************************
* 功  能：模块初始化
* 形  参：None
* 返回值：None
* 备  注：None
* 作  者：LG
* 日  期：2020/11/6
*********************************************************************************************************
*/

void setup(void)
{
    Serial.begin(115200);
}

/*
*********************************************************************************************************
* 功  能：循环调用
* 形  参：None
* 返回值：None
* 备  注：None
* 作  者：LG
* 日  期：2020/10/29
*********************************************************************************************************
*/

void loop(void)
{
    time_ms = millis();
    time_us = micros();

    Serial.print("system run time(ms): ");
    Serial.println(time_ms);
    Serial.print("system run time(us): ");
    Serial.println(time_us);

    delay(1000);
}
