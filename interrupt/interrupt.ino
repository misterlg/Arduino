#define KEY 0
#define LED 2

/*
*********************************************************************************************************
* 功  能：中断服务函数
* 形  参：None
* 返回值：None
* 备  注：None
* 作  者：LG
* 日  期：2020/10/29
*********************************************************************************************************
*/

void ICACHE_RAM_ATTR Interrupt(void)
{
    Serial.println("get into interrupt");
    digitalWrite(LED, !digitalRead(LED));
}

/*
*********************************************************************************************************
* 功  能：模块初始化
* 形  参：None
* 返回值：None
* 备  注：None
* 作  者：LG
* 日  期：2020/10/29
*********************************************************************************************************
*/

void setup()
{
    Serial.begin(115200);
    pinMode(KEY, INPUT);
    pinMode(LED, OUTPUT);
    attachInterrupt(KEY, Interrupt, FALLING);
}

